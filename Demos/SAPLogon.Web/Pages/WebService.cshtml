@page "/webservice"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model SAPLogon.Web.Pages.WSModel;

@{
    ViewData["Title"] = "WebService Demo";
}
<div class="container mt-5">
    <h3 class="text-center">@ViewData["Title"]</h3>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post">
                <div class="form-floating mb-3">
                    <select asp-for="Cert" asp-items="Model.CertList" class="form-select">
                        <option value="">-- Select a certificate --</option>
                    </select>
                    <label for="Cert">Cert ID:</label>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="UserName" asp-items="Model.UserList" class="form-select">
                        <option value="">-- Select a user name --</option>
                    </select>
                    <label for="UserName">User ID:</label>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="Language" asp-items="Model.LangList" class="form-select">
                        <option value="">-- Select a language --</option>
                    </select>
                    <label for="Language">Language:</label>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="Service" asp-items="Model.ServiceList" class="form-select">
                        <option value="">-- Select a service --</option>
                    </select>
                    <label for="Service">Service:</label>
                </div>
                <div class="form-check form-switch">
                    <input asp-for="ShowRequest" type="checkbox" class="form-check-input" id="ShowRequest">
                    <label class="form-check-label" for="ShowRequest">Show request</label>
                </div>

                <div class="form-check form-switch">
                    <input asp-for="ShowResponseHeaders" type="checkbox" role="switch" class="form-check-input" id="ShowResponseHeaders">
                    <label class="form-check-label" for="ShowResponseHeaders">Show response headers</label>
                </div>
                <div class="form-check form-switch">
                    <input asp-for="ParseResponse" type="checkbox" role="switch" class="form-check-input" id="ParseResponse">
                    <label class="form-check-label" for="ParseResponse">Parse response</label>
                </div>
                <button type="submit" asp-page-handler="Submit" class="btn btn-primary btn-lg">Submit</button>
            </form>

        </div>
        <label for="TxtStatus" />
        <textarea asp-for="TxtStatus" class="form-control mt-3" style="font-size: 10px" rows="25" readonly></textarea>
    </div>
</div>
